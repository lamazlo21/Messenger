<!doctype html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="styles/styles.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">
    <title>Messenger App</title>
</head>
<body>
    <div class="wrapper">
        <header class="header">
            <nav class="nav">
                <div class="logo">
                    <a  href="/"><img class="logo--logo" src="./assets/logo.svg" alt="Bubble chat"></a>
                </div>
                <div class="menu">
                    <div class="menu__search">
                        <input class="menu__search--input" id="search" placeholder="Search room..." type="text">
                    </div>
                    <%if(allRooms){%>
                        <a class="menu__sign" href="/signout"><p class="menu__sign--text">SIGN OUT</p></a>
                        <a class="menu__sign"></a><p class="menu__sign--text">ADD ROOM</p></a>
                    <%}else{%>
                        <a class="menu__sign" href="/signin"><p class="menu__sign--text">SIGN IN</p></a>
                        <a class="menu__sign" href="/signup"><p class="menu__sign--text">SIGN UP</p></a>
                    <%}%>
                </div>
            </nav>
        </header>
        <main class="main">
            <h2 class="main--title">
                Available rooms
            </h2>
            <div class="main__rooms">
                <% data.forEach((element)=>{ %>
                    <div class="main__room" roomid="<%=element.room_id%>">
                        <div class="main__room-inside">
                        <p class="main__room--name"><%=element.name%> room</p>
                            <div class="main__room-users">
                                <img class="main__room--image" src="./assets/user.svg" alt="user">
                                <p><%=element.numberOfUsers%></p>
                            </div>
                        </div>
                    </div>
                <%})%>
            </div>
        </main>
          <%if(allRooms){%>
            <main class="main">
              <h2 class="main--title">
                You're rooms
            </h2>
            <div class="main__rooms">
                <% allRooms.forEach((element)=>{ %>
                    <div class="main__room">
                        <div class="main__room-inside">
                        <p class="main__room--name"><%=element.name%> room</p>
                            <div class="main__room-users">
                                <img class="main__room--image" src="./assets/user.svg" alt="user">
                                <p><%=element.numberOfUsers%></p>
                            </div>
                        </div>
                    </div>
                <%})%>
             </div>
            <%}%>
        </main>
    </div>
    <script src="scripts/homepageScript.js"></script>
</body>
</html>